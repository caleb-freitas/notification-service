generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id String @id @default(uuid())
  recipientId String
  content String
  category String
  readedAt DateTime?
  createdAt DateTime @default(now())
  
  @@index([recipientId])
}
